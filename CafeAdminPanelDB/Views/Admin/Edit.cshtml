@model ProductEditListVM


<section class="container ">
    <form asp-action="Edit" method="post" class="row" enctype="multipart/form-data">
       
        <center>
            <div class="d-grid col-4 mx-auto border border-3 ">
                <input asp-for="@Model.Dosya" type="file" id="formFile">
            </div>
           @*  <div class="mb-3">
                <label asp-for="@Model.Dosya" class="form-label"></label>
                <img src="@Model.Dosya" width="200" height="200"> @*resim seç
            </div> *@
        </center>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Adı:</label>
            <input asp-for="@Model.Name" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="validationCustom04" class="form-label text-danger fw-bold">Product Type</label>
            <select asp-for="@Model.Type" class="form-select" id="validationCustom04" required>
                <option selected>Hot Drinks</option>
                <option value="1">Cold Drinks</option>
                <option value="2">Dessert</option>
                <option value="3">Food</option>
            </select>
        </div>


        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Ücret:</label>
            <input asp-for="Price" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Açıklama:</label>
            <input asp-for="Description" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>


        <form asp-action="Edit">
            <input type="submit" value="Edit" class="btn btn-success" />
            <a asp-action="Index">Back to List</a>
        </form>

    </form>

</section>





