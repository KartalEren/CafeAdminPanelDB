@model ProductListVM



<section class="container">
    <form asp-action="Details" method="post" class="row" enctype="multipart/form-data">

        <center>
           
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label"></label>
                <img src="@Model.ImagePath" class="object-fit-contain border rounded-sm" alt="@Model.Name" width="100" height="100" />
            </div>
        </center>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">ID:</label>
            <input asp-for="@Model.Id" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Adı:</label>
            <input asp-for="@Model.Name" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Türü:</label>
            <input asp-for="@Model.Type" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>

        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Ücret:</label>
            <input asp-for="@Model.Price" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>
        <div class="mb-3">
            <label for="formGroupExampleInput" class="form-label">Açıklama:</label>
            <input asp-for="@Model.Description" type="text" class="form-control" id="formGroupExampleInput" placeholder="">
        </div>


        <button asp-action="Index" type="submit" class="btn btn-outline-primary fw-bold">Back to List</button>

    </form>
</section>




